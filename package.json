{
  "name": "piman.dev",
  "version": "0.0.1",
  "description": "Website for piman.dev",
  "main": "dist/index.js",
  "scripts": {
    "build:tsc": "tsc",
    "build:css": "postcss public/css/tailwind.css -o public/css/style.css",
    "build": "tsc && npm run build:css",
    "run": "node dist/index.js",
    "start": "npm run build && npm run run",
    "build-prod:css": "cross-env NODE_ENV=production postcss public/css/tailwind.css -o public/css/style.css",
    "build-prod": "tsc && npm run build-prod:css",
    "prod": "pm2 delete all && npm i && npm run build-prod && pm2 start dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piman51277/piman.dev.git"
  },
  "author": "piman51277",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/piman51277/piman.dev/issues"
  },
  "homepage": "https://github.com/piman51277/piman.dev#readme",
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.3.3",
    "handlebars": "^4.7.7",
    "tailwindcss": "^2.2.15"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "autoprefixer": "^10.3.4",
    "eslint": "^7.32.0",
    "typescript": "^4.4.3"
  }
}
